<h1>Schatting Belastingen & Toeslagen 2026</h1>
<p>Vul je gegevens in voor een ruwe schatting van box 1/3 belasting, heffingskortingen en toeslagen (zorg-, huur-, kinderopvangtoeslag, kindgebonden budget). Gebaseerd op officiële 2026-bedragen.</p>

<div class="section">
  <h2>Persoonlijke situatie</h2>
  <label>Fiscaal partner? (gezamenlijk inkomen / toeslagen)</label>
  <select id="partner">
    <option value="nee">Nee (alleenstaand)</option>
    <option value="ja">Ja (met toeslagpartner)</option>
  </select>

  <label>AOW-gerechtigd in 2026? (lager tarief box 1)</label>
  <select id="aow">
    <option value="nee">Nee</option>
    <option value="ja">Ja</option>
  </select>

  <label>Aantal kinderen <18 jaar</label>
  <input type="number" id="kinderen" min="0" value="0">

  <label>Leeftijd jongste kind (voor kindgebonden budget schatting)</label>
  <select id="leeftijdKind">
    <option value="0-5">0-5 jaar</option>
    <option value="6-11">6-11 jaar</option>
    <option value="12-17" selected>12-17 jaar</option>
  </select>
</div>

<div class="section">
  <h2>Inkomen & Loon (box 1)</h2>
  <label>Bruto jaarloon / inkomen uit werk (€)</label>
  <input type="number" id="brutoloon" min="0" value="40000">

  <label>Betaalde loonbelasting in 2026 (€, schatting)</label>
  <input type="number" id="betaaldeLoonbel" min="0" value="8000">

  <label>Betaalde hypotheekrente (€ per jaar)</label>
  <input type="number" id="hypotheekrente" min="0" value="0">
</div>

<div class="section">
  <h2>Vermogen (box 3, peildatum 1 jan 2026)</h2>
  <label>Bank- & spaartegoeden (€)</label>
  <input type="number" id="spaargeld" min="0" value="10000">

  <label>Beleggingen / overig vermogen (€, aandelen, 2e huis etc.)</label>
  <input type="number" id="overigVermogen" min="0" value="0">

  <label>Schulden (niet eigenwoning, >€3.400 drempel)</label>
  <input type="number" id="schulden" min="0" value="0">
</div>

<div class="section">
  <h2>Wonen & Huur</h2>
  <label>Kale huur per maand (€, excl. servicekosten)</label>
  <input type="number" id="huur" min="0" value="700">

  <label>Leeftijd hoofd-huurder</label>
  <select id="huurLeeftijd">
    <option value="onder21">Onder 21</option>
    <option value="21plus" selected>21 of ouder</option>
  </select>
</div>

<div class="section">
  <h2>Kinderopvang</h2>
  <label>Totaal kinderopvangkosten per jaar (€)</label>
  <input type="number" id="opvangJaar" min="0" value="0">
</div>

<button onclick="bereken()">Bereken schatting 2026</button>

<div id="result"></div>

<div class="disclaimer">
  <strong>Disclaimer – Dit is GEEN officiële berekening!</strong><br>
  Alleen een schatting op basis van bekende 2026-regels (jan 2026). Geen rekening met alle aftrekken, eigenwoningforfait exact, alleenstaande-ouderkorting, etc. Gebruik altijd de officiële proefberekening op <a href="https://www.belastingdienst.nl/rekenhulpen" target="_blank">belastingdienst.nl</a> of <a href="https://www.toeslagen.nl/proefberekening" target="_blank">toeslagen.nl</a>. Resultaten kunnen sterk afwijken.
</div>

<script>
function bereken() {
  // Inputs ophalen
  const partner = document.getElementById('partner').value === 'ja';
  const aow = document.getElementById('aow').value === 'ja';
  const kinderen = parseInt(document.getElementById('kinderen').value) || 0;
  const brutoloon = parseFloat(document.getElementById('brutoloon').value) || 0;
  const hypotheekrente = parseFloat(document.getElementById('hypotheekrente').value) || 0;
  const betaaldeLoonbel = parseFloat(document.getElementById('betaaldeLoonbel').value) || 0;
  const spaargeld = parseFloat(document.getElementById('spaargeld').value) || 0;
  const overig = parseFloat(document.getElementById('overigVermogen').value) || 0;
  const schulden = parseFloat(document.getElementById('schulden').value) || 0;
  const huurMaand = parseFloat(document.getElementById('huur').value) || 0;
  const huurJaar = huurMaand * 12;
  const huurLeeftijd = document.getElementById('huurLeeftijd').value;
  const opvangJaar = parseFloat(document.getElementById('opvangJaar').value) || 0;

  let html = '<h2>Resultaat schatting 2026</h2>';

  // Box 1 - vereenvoudigd (bruto - aftrek rente, maar geen forfait etc.)
  let belastbaarBox1 = brutoloon - hypotheekrente; // zeer ruw
  let ibTarief1 = aow ? 0.1785 : 0.3575;
  let ibTarief2 = 0.3756;
  let ibTarief3 = 0.4950;

  let ib = 0;
  const schijf1 = 38883;
  const schijf2 = 78426;

  if (belastbaarBox1 <= schijf1) {
    ib = belastbaarBox1 * ibTarief1;
  } else if (belastbaarBox1 <= schijf2) {
    ib = schijf1 * ibTarief1 + (belastbaarBox1 - schijf1) * ibTarief2;
  } else {
    ib = schijf1 * ibTarief1 + (schijf2 - schijf1) * ibTarief2 + (belastbaarBox1 - schijf2) * ibTarief3;
  }

  // Heffingskortingen ruw (algemene ~€3000-5000, arbeid ~afhankelijk inkomen, IACK bij kinderen)
  let heffingskortingRuw = 3000 + (kinderen > 0 ? 2000 : 0); // zeer ruw
  let teBetalenBox1 = Math.max(0, ib - heffingskortingRuw - betaaldeLoonbel);

  html += `<p><b>Box 1 inkomstenbelasting schatting (na ruwe kortingen):</b> €${Math.round(teBetalenBox1).toLocaleString('nl-NL')} (ruw, excl. exacte kortingen)</p>`;

  // Box 3
  const vrijstelling = partner ? 2 * 59357 : 59357; // 2026 peildatum
  let rendementsgrondslag = Math.max(0, spaargeld + overig - schulden - vrijstelling);
  let fictRendement = (spaargeld * 0.0128) + (overig * 0.06) - (schulden * 0.027);
  let box3Inkomen = Math.max(0, fictRendement); // ruw, want verdeeld
  let box3Belasting = box3Inkomen * 0.36;

  html += `<p><b>Box 3 vermogensrendementsheffing:</b> €${Math.round(box3Belasting).toLocaleString('nl-NL')}</p>`;

  // Zorgtoeslag (max €129 / €246, afbouw ruw lineair)
  let zorgMaxMaand = partner ? 246 : 129;
  let zorgGrens = partner ? 51142 : 40857;
  let zorg = 0;
  let toetsInkomen = brutoloon; // ruw
  if (toetsInkomen < 29500) {
    zorg = zorgMaxMaand * 12;
  } else if (toetsInkomen < zorgGrens) {
    let afbouw = (toetsInkomen - 29500) / (zorgGrens - 29500);
    zorg = zorgMaxMaand * 12 * (1 - afbouw * 0.8); // ruwe afschaling
  }
  html += `<p><b>Zorgtoeslag schatting (jaar):</b> €${Math.round(zorg).toLocaleString('nl-NL')}</p>`;

  // Huurtoeslag (zeer ruw, kale huur, max €932.93 / €498.20)
  let maxHuur = (huurLeeftijd === 'onder21') ? 498.20 : 932.93;
  let rekenHuur = Math.min(huurMaand, maxHuur);
  let huurtoeslagMaand = 0;
  if (rekenHuur > 200 && toetsInkomen < (partner ? 60000 : 45000) + kinderen*5000) {
    huurtoeslagMaand = Math.max(0, (rekenHuur * 12 - 3000) * 0.4 - toetsInkomen * 0.15) / 12; // ruw
  }
  let huurtoeslag = huurtoeslagMaand * 12;
  html += `<p><b>Huurtoeslag schatting (jaar):</b> €${Math.round(huurtoeslag).toLocaleString('nl-NL')}</p>`;

  // Kinderopvangtoeslag (max ~96% tot ~€56k, dan afbouw)
  let opvangToeslag = 0;
  if (opvangJaar > 0 && toetsInkomen < 140000) {
    let perc = 0.96;
    if (toetsInkomen > 56000) perc -= (toetsInkomen - 56000) / 100000 * 0.63;
    perc = Math.max(0.33, perc);
    opvangToeslag = opvangJaar * perc;
  }
  html += `<p><b>Kinderopvangtoeslag schatting (jaar):</b> €${Math.round(opvangToeslag).toLocaleString('nl-NL')}</p>`;

  // Kindgebonden budget + kinderbijslag ruw
  let kindBudget = 0;
  if (kinderen > 0 && toetsInkomen < 120000) {
    kindBudget = kinderen * (document.getElementById('leeftijdKind').value === '0-5' ? 1500 : document.getElementById('leeftijdKind').value === '6-11' ? 1300 : 1100); // ruw
    if (toetsInkomen > 50000) kindBudget *= 0.5;
  }
  html += `<p><b>Kindgebonden budget schatting (jaar):</b> €${Math.round(kindBudget).toLocaleString('nl-NL')}</p>`;

  // Totaal
  let totaalToeslagen = zorg + huurtoeslag + opvangToeslag + kindBudget;
  let nettoBelasting = teBetalenBox1 + box3Belasting - totaalToeslagen;

  html += `<hr><h3>Totaaloverzicht</h3>
  <table>
    <tr><th>Omschrijving</th><th>Bedrag (€/jaar)</th></tr>
    <tr><td>Toeslagen totaal</td><td>+${Math.round(totaalToeslagen).toLocaleString('nl-NL')}</td></tr>
    <tr><td>Belasting box 1 + 3 schatting</td><td>-${Math.round(teBetalenBox1 + box3Belasting).toLocaleString('nl-NL')}</td></tr>
    <tr><td><b>Netto schatting (belasting min toeslagen)</b></td><td><b>${Math.round(nettoBelasting).toLocaleString('nl-NL')}</b></td></tr>
  </table>`;

  document.getElementById('result').innerHTML = html;
}
</script>
</body>
</html>
